<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--    <patient form view/>-->
    <record id="view_cancel_appointment_form" model="ir.ui.view">
        <field name="name">cancel.appointment.wiz.form</field>
        <field name="model">cancel.appointment.wiz</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="appointment_id"/>
                        </group>
                    </group>
                    <footer>
                    <button name="action_cancel" string="Cancel Appointment" type="object" class="btn-primary" data-hotkey="q"/>
                    <button name="" string="Discard" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
                </sheet>
            </form>
        </field>
    </record>


    <!--  window  <actions />-->
    <record id="action_cancel_appointment" model="ir.actions.act_window">
        <field name="name">Cancel Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.appointment.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem id="menu_cancel_appointment"
              name="Cancel Appointment"
              parent="menu_appointment_master"
              action="action_cancel_appointment"
              sequence="1"/>


</odoo>