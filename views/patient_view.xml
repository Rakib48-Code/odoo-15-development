<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--    < search view patient/>-->
    <record id="patient_search_view" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Patient Name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="ref"/>

                <!--                <add filter/>-->
                <filter name="filter_male" string="Male" domain="[('gender', '=', 'male')]"/>
                <filter name="filter_female" string="Female" domain="[('gender', '=', 'female')]"/>
                <separator/>
                <filter name="filter_kid" string="Kids" domain="[('age', '&lt;=', 5)]"/>
                <filter name="filter_archive" string="Archived" domain="[('active', '=', False)]"/>

                <!--                < add group by/>-->
                <group expand="0" string="Group By">
                    <filter name="group_by_gender" string="Gender" context="{'group_by':'gender'}"/>
                </group>

                <!--                <add searchpanel/>-->
                <searchpanel>
                    <field name="gender" icon="fa-users" select="multi"  enable_counters="1"/>
                </searchpanel>


            </search>
        </field>
    </record>


    <!--    <tree view patient/>-->
    <record id="patient_tree_view" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="ref"/>
            </tree>
        </field>
    </record>


    <!--    <patient form view/>-->
    <record id="patient_form_view" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="ref"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <!--  window  <actions />-->
    <record id="action_patient_menu" model="ir.actions.act_window">
        <field name="name">Patients Cards</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>

        <!--        <set default filter and group_by search/>-->
        <!--        <field name="context">{'search_default_group_by_gender':1,'search_default_filter_male':1}</field>-->
        <field name="context">{'search_default_group_by_gender':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new patient.
            </p>
        </field>
    </record>


    <menuitem id="menu_patient"
              name="Patients Cards"
              action="action_patient_menu"
              parent="menu_patient_master"
              sequence="0"/>

</odoo>