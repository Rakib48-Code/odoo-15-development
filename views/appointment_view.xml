<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--    <appointment tree view/>-->
    <record id="appointment_tree_view" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="appointment_time"/>
                <field name="booking_date"/>
            </tree>
        </field>
    </record>


    <!--    <appointment form view/>-->
    <record id="appointment_form_view" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="patient_id" string="Patient Name"/>
                        <field name="appointment_time"/>
                        <field name="booking_date"/>
                    </group>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <!--  window  <actions />-->
    <record id="action_menu_appointment" model="ir.actions.act_window">
        <field name="name">Appointment Cards</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new appointment.
            </p>
        </field>
    </record>


    <menuitem id="menu_appointment"
              name="Appointment Cards"
              action="action_menu_appointment"
              parent="menu_appointment_master"
              sequence="0"/>

</odoo>