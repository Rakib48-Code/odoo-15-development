<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--    <appointment tree view/>-->
    <record id="appointment_tree_view" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <!--            <remove create/>-->
            <!--            <tree create="0">-->
            <tree>
                <field name="patient_id"/>
                <field name="gender"/>
                <field name="appointment_time"/>
                <field name="booking_date"/>
                <field name="ref"/>
                <field name="state"
                       decoration-info="state in ('draft', 'in_consultation')"
                       decoration-danger="state == 'cancel'"
                       decoration-success="state == 'done'"
                       widget="badge"/>
            </tree>
        </field>
    </record>


    <!--    <appointment form view/>-->
    <record id="appointment_form_view" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_draft" string="Draft" type="object" class="oe_highlight"/>
                    <button name="action_in_consultation" string="In Consultation" type="object" class="oe_highlight"/>
                    <button name="action_done" string="Done" type="object" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_consultation,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority" class="mr-3"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" string="Patient Name"/>
                            <field name="gender"/>
                            <field name="ref"/>
                        </group>
                        <group>
                            <field name="appointment_time"/>
                            <field name="booking_date"/>
                        </group>
                    </group>
                    <!--                    <add notebook/>-->
                    <notebook>
                        <page string="Prescription">
                            <field name="prescription" placeholder="Enter Your Prescription"/>
                        </page>
                        <page string="Pharmacy">

                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <!--  window  <actions />-->
    <record id="action_menu_appointment" model="ir.actions.act_window">
        <field name="name">Appointment Cards</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new appointment.
            </p>
        </field>
    </record>


    <menuitem id="menu_appointment"
              name="Appointment Cards"
              action="action_menu_appointment"
              parent="menu_appointment_master"
              sequence="0"/>

</odoo>