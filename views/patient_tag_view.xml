<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--    <tree view patient/>-->
    <record id="patient_tag_tree_view" model="ir.ui.view">
        <field name="name">patient.tag.tree</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="active"/>
            </tree>
        </field>
    </record>


    <!--    <patient form view/>-->
    <record id="patient_tag_form_view" model="ir.ui.view">
        <field name="name">patient.tag.form</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="color_2" widget="color"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!--  window  <actions />-->
    <record id="action_patient_tag" model="ir.actions.act_window">
        <field name="name">Patient Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_by_gender':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new patient.
            </p>
        </field>
    </record>


    <menuitem id="menu_patient_tag"
              name="Patient Tags"
              parent="menu_configuration"
              action="action_patient_tag"
              sequence="0"/>

</odoo>